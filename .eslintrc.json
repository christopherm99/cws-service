{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "plugins": [
    "promise",
    "sonarjs",
    "unicorn"
  ],
  "extends": [
    "plugin:vue/recommended",
    "@vue/prettier",
    "plugin:promise/recommended",
    "plugin:sonarjs/recommended",
    "plugin:unicorn/recommended"
  ],
  "rules": {
    "unicorn/filename-case": "off",
    "promise/no-callback-in-promise": "off",
    "promise/no-nesting": "off"
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}